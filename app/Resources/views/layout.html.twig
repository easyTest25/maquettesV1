<!DOCTYPE html>
<html>
<head>
    {% block head %}
    {% endblock head %}
    {% include "head.html.twig" %}
</head>
<body>
{% block nav %}
    <div class="section">
        <nav class="light-blue lighten-1" role="navigation">
            <div class="nav-wrapper container"><a id="logo-container" href="{{ path("app_home") }}"
                                                  class="brand-logo">Logo</a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="{{ path('app_login') }}">Inscription</a></li>
                    <li><a href="#">Conexion</a></li>
                    <li><a href="#">Tarifs</a></li>
                    <li><a href="#">Nous contacter</a></li>
                </ul>

                <ul id="nav-mobile" class="side-nav">
                    <li><a href="{{ path('app_login') }}">Inscription</a></li>
                    <li><a href="#">Conexion</a></li>
                    <li><a href="#">Tarifs</a></li>
                    <li><a href="#">Nous contacter</a></li>
                </ul>
                <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
            </div>
        </nav>
    </div>
{% endblock %}

{% block header_image %}{% endblock %}
<br><br>

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col s12 center-align">
                <h2>
                    {% block content_title %}{% endblock %}
                </h2>
            </div>
            <div class="col m3 s12">
                {% block left_side_content %}{% endblock %}
            </div>
            <div class="col m9 s12">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
</div>
<footer class="page-footer orange">
    {% block footer %}
        {% include "footer.html.twig" %}
    {% endblock %}
</footer>


<!--  Scripts-->
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="{{ asset('bundles/app/js/init.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/app/js/materialize.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/app/js/datatables/datatables.min.js') }}"></script>
<script type="text/javascript" src="http://momentjs.com/downloads/moment-with-locales.js"></script>
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.1.0/fullcalendar.min.js"></script>
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.1.0/fullcalendar.min.css"></script>
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.1.0/fullcalendar.print.css"></script>
</body>
</html>
