{% extends "::layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12 " style="height: 200px; background-color: grey; vertical-align: bottom !important;">
                <h3 class="white-text">Encadré ou pourraient se trouver les actualités et les promos</h3>
            </div>
            <div class="col s7"></div>
        </div>

        <ul class="collapsible" data-collapsible="accordion">
            <li>
                <div class="collapsible-header"><i class="material-icons">message</i>Mes messages</div>
                <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
            </li>
        </ul>

        <ul class="collapsible" data-collapsible="accordion">
            <li>
                <div class="collapsible-header"><i class="material-icons">swap_horiz</i>Mes transactions</div>
                <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
            </li>
        </ul>

        <ul class="collapsible" data-collapsible="accordion">
            <li>
                <div class="collapsible-header"><i class="material-icons">filter_drama</i>First</div>
                <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
            </li>
        </ul>
    </div>
{% endblock %}

{% block left_side_content %}
    <div class="border-right">
        <div class="always-show">
            <div class="link-action">
                <div class="row">
                    <div class="col s12"><a href="">Mes evenements à venir</a></div>
                </div>
                <div class="row">
                    <div class="col s12"><a href="">Mon calendrier</a></div>
                </div>

                <a class="modal-trigger" href="#modal1">Publier une annonce</a>
                <!-- Modal Structure -->
                <div id="modal1" class="modal modal-fixed-footer">
                    <div class="modal-content">
                        <h4>Modal Header</h4>
                        <p>A bunch of text</p>
                    </div>
                    <div class="modal-footer">
                        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
                    </div>
                </div>
            </div>
            <br>
            <br>
            <div class="divider"></div>
            <span class="flow-text">Annonce en <br>cours de <br>validation</span>
        </div>
        <div class="card-in-validation">
            {% for i in 0..2 %}
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="http://lorempixel.com/80/80/nature/{{ i }}">
                    </div>
                    <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{ random(['Moto', 'Voiture', 'Quad']) }}
                        <i
                                class="material-icons right">more_vert</i></span>
                        <p><a href="#">En savoir plus...</a></p>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">{{ random(['Moto', 'Voiture', 'Quad']) }}<i
                                    class="material-icons right">close</i></span>
                        <p>Here is some more information about this product that is only revealed once clicked on.</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

{% block nav %}
    <nav class="light-blue lighten-1" role="navigation">
        <div class="nav-wrapper container"><a id="logo-container" href="{{ path("app_home") }}"
                                              class="brand-logo">Logo</a>
            <ul class="right hide-on-med-and-down">
                <li><a href="#">Tableau de bord</a></li>
                <li><a href="#">Mes messages</a></li>
                <li><a href="{{ path('app_my_adverts') }}">Mes annonces</a></li>
                <li><a href="#">Mes evenements</a></li>
                <li><a href="#">Mon profil</a></li>
                <li><a href="#">Mon compte</a></li>
            </ul>

            <ul id="nav-mobile" class="side-nav">
                <li><a href="">Tableau de bord</a></li>
                <li><a href="#">Mes messages</a></li>
                <li><a href="{{ path('app_my_adverts') }}">Mes annonces</a></li>
                <li><a href="#">Mes evenements</a></li>
                <li><a href="#">Mon profil</a></li>
                <li><a href="#">Mon compte</a></li>
            </ul>
            <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
        </div>
    </nav>
{% endblock %}